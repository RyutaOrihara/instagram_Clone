<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <%= link_to 'View', blogs_path,class: 'btn btn-primary' %>
        <% if logged_in? %>
          <%= link_to "Profile", user_path(current_user.id),class: 'btn btn-info' %>
          <%= link_to "Logout", session_path(current_user.id),method: :delete,class:'btn btn-danger' %>
        <% else %>
          <%= link_to "Sign up", new_user_path,class:'btn btn-info' %>
          <%= link_to "Login", new_session_path,class:'btn btn-danger' %>
        <% end %>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </ul>
   </header>

    <%= yield %>

